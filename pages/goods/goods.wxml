      <view class='r_img'>
        <image src='../imgs/goods.png' mode='widthFix'></image>
      </view>
      <view class='r_info'>
        <view>
          <text>大白菜</text>
          <text>500g</text>
        </view>
        <view class='weight'>1份</view>
        <view class='price_box'><view class='price_input'><text>￥</text><input value='12.5' bindinput=''></input></view> <view class='btn'>上传</view></view>
      </view>
    </view> -->

  </scroll-view>
</view>