/* pages/goods/goods.wxss */

.list_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* margin: 200rpx 0 0 0; */
  position: fixed;
  width: 100%;
  left: 0;
  top: 200rpx;
  height: 100%;

}

.left {
  /* position: absolute;
  left: 0;
  top: 0; */
  /* margin: 50rpx 0 0 0; */
  width: 30%;
  height: 100%;
  background-color: #f8f8f8;
  overflow: scroll;
}

.left::-webkit-scrollbar {
  display: none;
}

.left_item {
  text-align: center;
  padding: 15rpx 0;
  font-size: 24rpx;
  color: #222;
  border-bottom: 2rpx solid #fff;
}

.left_item .text {
  padding: 15rpx 0;
  width: 100%;
}

.text_active {
  background-color: #fff;
  color: #26c763;
}

.text_active .text {
  border-left: 6rpx solid #26c763;
}

.right {
  /* position: absolute;

  right: 0;
  top: 0; */
    width: 70%;
  /* margin: 50rpx 0 0 0; */
  height: 100%;
  background-color: #fff;
}

.menu {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background: linear-gradient(to right, #44dc55, #30bc5b); /* 标准的语法 */
  padding: 18rpx 20rpx;
  width: 25%;
  /* margin: 100rpx 26rpx 0 45%; */
  position: fixed;
  top: 100rpx;
  right: 26rpx;
  z-index: 2;
  font-size: 24rpx;
  color: #fff;
  border-radius: 10rpx;
}

.menu picker {
  flex: 1;
  text-align: center;
}

.swiper_box {
  height: 50rpx;
  font-size: 24rpx;
  padding: 10rpx 0;
}

.swiper_box swiper-item {
  text-align: center;
  background-color: #fff;
}

.r_img {
  width: 220rpx;
  height: 165rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx 0 0;
  background-color: #f5f5f5;
}

.r_img image {
  width: 220rpx;
  height: 165rpx;
}

.right_item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  padding: 20rpx 5rpx;
  border-bottom: 2rpx solid #eee;
  overflow-x: scroll;
  /* justify-content: space-between */
}

.price_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 0 20rpx 0;
}

.btn {
  background-color: #02af74;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  padding: 10rpx 15rpx;
  border-radius: 5rpx;
}

.r_info {
  flex: 1;
}

.weight {
  border: 2rpx solid #26c763;
  /* padding: 10rpx 0; */
  text-align: center;
  color: #26c763;
  font-size: 24rpx;
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin: 20rpx 0;
}

.price_box input {
  width: 56rpx;
  /* padding: 10rpx 0; */
  text-align: center;
  height: 30rpx;
  line-height: 30rpx;
}

.price_input text {
  height: 30rpx;
  line-height: 30rpx;
}

.price_input {
  flex: 1;
  display: flex;
  align-items: center;
  color: #ff1d32;
}

.r_top {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
}

.r_list {
  margin: 50rpx 0 0 0;
  padding: 0 0 100rpx 0;
}
