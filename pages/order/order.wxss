.list_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  padding: 30rpx 0 30rpx 12rpx;
  border-bottom: 2rpx solid #F8F8F8;
}

.list_item view {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.list_item .view1 {
  flex: 1;
}

.list_item .view2 {
  flex: 2;
}

.list_item:first-child {
  color: #333;
  overflow: auto
}
.price{
  color: #F71F1F;
}
.handle{
  color: #86F9AE;
}
.agree{
  color: #1DB966
}
.refuse{
  color: #F85151;
}