/* pages/order/order.wxss */

.order_top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2px 0 0 rgba(85, 84, 84, 0.11);
  margin: 0 0 30rpx 0;
  z-index: 1;
}

.order_top view {
  flex: 1;
  padding: 30rpx 0;
  text-align: center;
  font-size: 30rpx;
  color: #02af74;
  background-color: #fff;
}

.order_top .active_view {
  color: #fff;
  background: linear-gradient(to right, #44dc55, #30bc5b); /* 标准的语法 */
}

.scroll {
  background-color: #fff;
  margin-top: 122rpx;
}

/* .list{
