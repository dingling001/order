/* pages/my/my.wxss */

.my_top {
  padding: 48rpx 53rpx;
  background-color: #fff;
  box-shadow: 1rpx 4rpx 49rpx 0px rgba(181, 181, 181, 0.49);
}

.item_top {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.item_top .iconfont {
  color: #1bb666;
  margin-right: 10rpx;
}

.item_top .icon-bianji {
  color: #999;
  margin-left: 10rpx;
}

.my_log {
  position: absolute;
  right: 50rpx;
  top: 50rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.my_log image {
  width: 100%;
}

page {
  background-color: #f3f5f7;
}

.my_title {
  padding: 40rpx 20rpx;
  font-size: 30rpx;
  color: #222;
  font-weight: bold;
}

.a_info {
  background: linear-gradient(90deg, rgba(68, 220, 85,1), rgba(48, 188, 91,1));
  border-radius: 10rpx;
  margin: 0 20rpx;
  padding: 40rpx 28rpx;
}
.a_item{
  font-size: 26rpx;
  padding: 0 0 30rpx 0;
  color: #fff;
  font-weight: bold;
}
.a_item:last-child{
  padding: 0;
}
.my_item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
}
.m1{
  margin-bottom: 1px;
}